@model inmobiliariaDEramo.Models.Pago


@{
    ViewData["Title"] = "Editar Concepto del Pago";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values)
            {
                foreach (var error in modelError.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}


<h1>@ViewData["Title"]</h1>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ContratoId" />

    <div class="form-group">
        <label asp-for="Detalle" class="control-label"></label>
        <input asp-for="Detalle" class="form-control" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <!-- Campos solo lectura -->
    <div class="form-group">
        <label>NÃºmero de Pago</label>
        <input class="form-control" value="@Model.NumeroPago" readonly />
    </div>
    <div class="form-group">
        <label>Fecha de Pago</label>
        <input class="form-control" value="@Model.FechaPago.ToShortDateString()" readonly />
    </div>
    <div class="form-group">
        <label>Importe</label>
        <input class="form-control" value="@Model.Importe.ToString("C")" readonly />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
